<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutQuestion10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question10Fragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <TextView
        android:id="@+id/question10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:padding="10dp"
        android:text="@string/question10"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup10"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/avancarButton10"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/question10">

        <RadioButton
            android:id="@+id/rb10a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Até R$ 1.000"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb10b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="De R$ 1.001 até R$ 5.000"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb10c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="De R$ 5.001 até R$ 10.000"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb10d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Acima de R$ 10.000"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/avancarButton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/avancar_button_label"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup10"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>