<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutQuestion3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question3Fragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <TextView
        android:id="@+id/question3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:padding="10dp"
        android:text="@string/question3"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup3"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/avancarButton3"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/question3">

        <RadioButton
            android:id="@+id/rb3a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Não possuo formação acadêmica ou conhecimento do mercado financeiro"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp" />

        <RadioButton
            android:id="@+id/rb3b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Possuo formação acadêmica na área financeira, mas não tenho experiência com o mercado financeiro"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb3c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Possuo formação acadêmica em outra área, mas possuo conhecimento do mercado financeiro"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb3d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Possuo formação acadêmica na área financeira ou pleno conhecimento do mercado financeiro"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp" />

    </RadioGroup>

    <Button
        android:id="@+id/avancarButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/avancar_button_label"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup3"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>