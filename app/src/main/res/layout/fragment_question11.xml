<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutQuestion11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question11Fragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <TextView
        android:id="@+id/question11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:padding="10dp"
        android:text="@string/question11"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup11"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/avancarButton11"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/question11">

        <RadioButton
            android:id="@+id/rb11a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Até R$ 10.000"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb11b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="De R$ 10.001 até R$ 100.000"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb11c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="De R$ 100.001 até R$ 500.000"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb11d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="De R$ 500.001 até R$ 1.000.000"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

        <RadioButton
            android:id="@+id/rb11e"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Acima de R$ 1.000.001"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:padding="4dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/avancarButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/finalizar_button_label"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup11"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>